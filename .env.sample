# Environment Configuration
# Set to 'local' for local development or 'cloud' for cloud deployment
ENVIRONMENT=local

# Cloud Database Configuration
# These variables are only used when ENVIRONMENT=cloud

# US East Region Database
US_EAST_HOST=us-east-db.example.com
US_EAST_PORT=26257

# US West Region Database
US_WEST_HOST=us-west-db.example.com
US_WEST_PORT=26257

# EU Central Region Database
EU_CENTRAL_HOST=eu-central-db.example.com
EU_CENTRAL_PORT=26257

# AP South Region Database
AP_SOUTH_HOST=ap-south-db.example.com
AP_SOUTH_PORT=26257

# Common Database Settings (used for all regions in cloud)
DATABASE_NAME=rideshare
DB_USER=root
DB_PASSWORD=

